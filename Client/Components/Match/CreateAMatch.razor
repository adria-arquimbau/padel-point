@page "/creatematch"
@using EventsManager.Shared.Dtos
@inject HttpClient Http

<h3>Create Match</h3>

<!-- Player 1 -->
<div class="player-area player-one">
    <div class="player-slot" @onclick="() => OpenPlayerAssignmentModal(0)">
        @if (_playerOne != null)
        {
            <div class="player-card">
                <img class="player-image" src="@_playerOne.ImageUrl" alt="Player's image" />
                <span class="player-nickname">@_playerOne.NickName</span>
                <button class="remove-player-btn" @onclick="() => UnassignPlayer(0)">X</button>
            </div>
        }
        else
        {
            <div class="assign-player">
                Assign Player
            </div>
        }
    </div>
</div>

