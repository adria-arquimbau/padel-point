@using EventsManager.Shared.Responses

<div class="border player-card">
    <div class="player-avatar">
            <img src="@GetPlayerAvatarSource()" alt="Player avatar" class="player-avatar-img"/>
    </div>
    <div class="player-info">
        <div class="player-info-header">
            <div class="player-info-name">
                @Player.NickName
            </div>
            <div class="player-info-flag">
                <CountryFlag Country="Country.AT" Size="FlagSize.Small"></CountryFlag>
            </div>
        </div>
        <div class="player-info-content">
            <div class="info-box">
                <div class="info-label">Matches</div>
                <div>@Player.MatchesPlayed</div>
            </div>
            <div class="info-box">
                <div class="info-label">Trend</div>
                <div>
                    <span class="@GetTrendClass()">@FormatTrend()</span>
                </div>
            </div>
            <div class="info-box">
                <div class="info-label">Elo</div>
                <div>@Player.Elo</div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public PlayerRankingResponse Player { get; set; }

    private string GetPlayerAvatarSource()
    {
        return Player?.ImageUrl?.ToString() ?? "/default-avatar.png";
    }

    private string GetTrendClass()
    {
        return Player?.LastEloGained > 0 ? "positive" : "negative";
    }

    private string FormatTrend()
    {
        return $"{(Player?.LastEloGained > 0 ? "+" : "")}{Player?.LastEloGained}";
    }
}

<style>
    .border {
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: white;
    }
    
    .player-card {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
        padding: 10px;
    }
    
    .player-avatar{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100px;
    }
    
    .player-avatar-img{
        width: 75px;
        height: 75px;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
    }
    
    .player-info {
        display: flex;
        flex-direction: column;
        margin-left: 20px;
    }
    
    .player-info-header {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
    }
    
    .player-info-flag{
        margin-top: 3px;
    }
    
    .player-info-content {
        display: flex;
        justify-content: flex-end;
        margin-top: 10px;
    }
    
    .info-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 12px;
    }
    
    .info-label {
        font-size: 12px;
        color: grey;
    }
    
    .positive {
        color: green;
    }
    
    .negative {
        color: red;
    }
</style>
